<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/green_bg"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/calculator_container"
        android:layout_width="350dp"
        android:layout_height="480dp"
        android:background="@drawable/calculator_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/output_layout"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/offstate_layout"
            app:layout_constraintBottom_toTopOf="@+id/gridLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/outputText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text=""
                android:textColor="#070707"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageButton
            android:id="@+id/power_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginEnd="15dp"
            android:background="?android:attr/selectableItemBackground"
            android:scaleType="fitCenter"
            android:src="@drawable/power_icon"
            app:layout_constraintBottom_toTopOf="@+id/gridLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/output_layout"
            tools:ignore="MissingConstraints" />

        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="315dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:background="@drawable/numbers_bg"
            android:columnCount="4"
            android:padding="5dp"
            android:rowCount="5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints">


            <Button
                android:id="@+id/ce_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:backgroundTint="#006F38"
                android:text="CE"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/c_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="3dp"
                android:backgroundTint="#006F38"
                android:text="C"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/squareRoot_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="3dp"
                android:backgroundTint="#006F38"
                android:text="âˆš"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/divide_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="3"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="3dp"
                android:backgroundTint="#596100"
                android:text="/"
                android:textColor="@color/white" />


            <!--2nd row buttons -->
            <Button
                android:id="@+id/one_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="3dp"
                android:backgroundTint="#0C3300"
                android:text="1"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/two_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="3dp"
                android:backgroundTint="#0C3300"
                android:text="2"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/three_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="3dp"
                android:backgroundTint="#0C3300"
                android:text="3"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/times_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="3"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="3dp"
                android:backgroundTint="#596100"
                android:text="x"
                android:textColor="@color/white" />

            <!--3rd row buttons -->
            <Button
                android:id="@+id/four_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="3dp"
                android:backgroundTint="#0C3300"
                android:text="4"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/five_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="3dp"
                android:backgroundTint="#0C3300"
                android:text="5"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/six_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="3dp"
                android:backgroundTint="#0C3300"
                android:text="6"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/minus_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="3"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="3dp"
                android:backgroundTint="#596100"
                android:text="-"
                android:textColor="@color/white" />

            <!--4th row buttons -->
            <Button
                android:id="@+id/seven_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="3dp"
                android:backgroundTint="#0C3300"
                android:text="7"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/eight_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="3dp"
                android:backgroundTint="#0C3300"
                android:text="8"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/nine_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="3dp"
                android:backgroundTint="#0C3300"
                android:text="9"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/plus_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="3"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="3dp"
                android:backgroundTint="#596100"
                android:text="+"
                android:textColor="@color/white" />

            <!--5th row buttons -->
            <Button
                android:id="@+id/sign_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="3dp"
                android:backgroundTint="#0C3300"
                android:text="+/-"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/zero_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="3dp"
                android:backgroundTint="#0C3300"
                android:text="0"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/decimal_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="3dp"
                android:backgroundTint="#0C3300"
                android:text="."
                android:textColor="@color/white"
                android:textSize="25sp" />

            <Button
                android:id="@+id/equals_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column="3"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="3dp"
                android:backgroundTint="#6D4700"
                android:text="="
                android:textColor="@color/white" />

        </GridLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>